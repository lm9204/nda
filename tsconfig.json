{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    //"declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "inlineSourceMap": true,
    "baseUrl": ".",
    "paths": { 
      "@api/*": ["pages/api/*"], 
      "@hooks/*": ["utils/hooks/*"], 
      "@components/*": ["components/*"], 
      "@styles/*": ["styles/*"], 
      "@utils/*": ["utils/*"], 
      "@pages/*": ["pages/*"],
      }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
